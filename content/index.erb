Title: Generated by nanoc-pandoc - Home

<%
  pages, posts = items.reduce [[], []] { |memo, item|
    if item[:kind] == 'article'
      [ memo[0], memo[1] << item ]
    else
      [ memo[0] << item, memo[1] ]
    end
  }
%>

<h1>Generated by nanoc-pandoc</h1>

<h2>Pages</h2>
<ul>
<% pages.each do |item| %>
	<% if item[:title] %>
		<li><%= link_to item[:title], item %></li>
	<% end %>
<% end %>
</ul>

<h2>Posts</h2>
<ul>
<% posts.each do |item| %>
	<% if item[:title] %>
		<li><%= link_to item[:title], item %></li>
	<% end %>
<% end %>
</ul>


<h2>Tags</h2>
<ul>
	<% count_tags().sort_by{|k,v| k}.each do |tag, count| %>
    <li>
			<a href="/tags/<%= tag %>/" class="tag"><%= tag %></a> x <%= count %>
		</li>
	<% end %>
</ul>

